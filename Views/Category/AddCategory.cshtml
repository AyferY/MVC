@model EntityLayer.Concrete.Category //Category üzerinde işlem gerçekleştireceğin için @Model diyerek eklemen gerekir.*@

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<h1>Yeni Kategori Ekleme Sayfası</h1>

</br>

@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
//Beginform başlangıcı yapar, içindeki kodun nerede ve ne zaman işlem gerçekleştireceğini 
//belirlemek için kullanılır.1. değer üzerinde çalıştığın action adı, 2. değer üzerinde 
//çalıştığın controller adı, 3. değer de ne zaman çalışacak- burada post işlemi olduğunda 
//post işlemi çalışacak demektir.
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x=>x.CategoryName)
        @Html.ValidationMessageFor(x=>x.CategoryName)

        <br />
        <br />
        @Html.Label("Açıklamayı Yazınız")
        @Html.TextBoxFor(x=>x.CategoryDescription)
        @Html.ValidationMessageFor(x=>x.CategoryDescription)

        <br />
        <br />
        <button>Kaydet</button>
    </div>
}

